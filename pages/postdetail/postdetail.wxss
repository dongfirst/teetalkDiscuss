/* pages/postdetail/postdetail.wxss */
/* 列表渲染单体 */
.postdetail{
  margin-top: 12rpx;
  height: 1280rpx;
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
  padding: 20rpx; /* 给整个帖子加上一些内边距 */
}
/* 分割线 */
.divider {
  height: 3rpx; /* 分割线的高度 */
  background-color: #2CC2C3; /* 分割线的颜色 */
  margin-top: 1rpx; /* 上下内边距 */
}
/* 顶栏，头像和昵称 */
.top{
  display: flex;
  flex-direction: row; /* 子元素垂直排列 */
}
.postuserimg{
  width: 100rpx; /* 图片宽度 */
  height: 100rpx; /* 图片高度 */
  /* margin-left: 200rpx; */
  margin-right: 30rpx; /* 图片右侧间距 */
}
.postuserimg image {
  width: 100%; /* 图片宽度 */
  height: 100%; /* 图片高度 */
  border-radius: 50%; /* 圆形头像 */
}
.postusername{
  margin-top:20rpx ;
  flex: 1; /* 占据剩余空间 */
  text-align: left; /* 文字左对齐 */
  font-size: 34rpx;        /* 字体大小 */
  color: #333;             /* 字体颜色 */
  font-weight: 550;        /* 字体粗细 */
  margin-bottom: 20rpx;    /* 底部外边距 */
  /* margin-bottom: 0rpx; */
}
/* 中部，内容加图像 */
.middle{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
  /* height: 700rpx; */
  background: white;
  border-radius: 10rpx;
  box-shadow: 5px 3px 5px 5px  #cdcfcf;
}
.posttext{
  margin-left: 15rpx;
  margin-top:10rpx ;
  text-align: left; /* 文字左对齐 */
  font-size: 32rpx;        /* 字体大小 */
  color: #333;             /* 字体颜色 */
  font-weight: 500;        /* 字体粗细 */
  margin-bottom: 20rpx;    /* 底部外边距 */
  /* height: 50rpx; */
}
.postimg{
  
  margin-left: 15rpx;
  margin-top: 150rpx;
  width: 200rpx; 
  height: 200rpx; /* 图片高度 */
  margin-bottom: 15rpx;
}
.postimg image {
  /* width: 100%;  */
  height: 100%; 
}
/* 刷新按钮 */
.freshbutton {
  position: fixed;
  bottom: 125px;       /* 距离顶部的距离 */
  right: 20px;     /* 距离右侧的距离 */
  display: flex;
}
/* 底部评论区 */
.down{
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
}
.single{
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row; /* 子元素垂直排列 */
}
.commentimg{
  margin-top:5rpx ;
  width: 80rpx; /* 图片宽度 */
  height: 80rpx; /* 图片高度 */
}
.commentimg image {
  width: 100%; /* 图片宽度 */
  height: 100%; /* 图片高度 */
  border-radius: 50%; /* 圆形头像 */
}
.commentbig{
  height: auto;
  width: 600rpx;
  margin-top:0rpx ;
  margin-left: 30rpx;
}
.commentname{
  text-align: left; /* 文字左对齐 */
  font-size: 32rpx;        /* 字体大小 */
  color: #333;             /* 字体颜色 */
  font-weight: 550;        /* 字体粗细 */
}
.comment{
  text-align: left; /* 文字左对齐 */
  font-size: 32rpx;        /* 字体大小 */
  color: #333;             /* 字体颜色 */
  font-weight: 500;        /* 字体粗细 */
}
/* 评论框 */
.commentinput{
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  background: white;
  border-radius: 50rpx;
  box-shadow: 10px -5px 15px 5px  #cdcfcf;
}
/* 滚动框 */
.list-container {
  flex: 1; /* 占据剩余空间 */
  overflow-y: auto; /* 允许垂直滚动 */
  padding: 0rpx; /* 添加一些内边距 */
}
